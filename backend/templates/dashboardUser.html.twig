{% extends 'base.html.twig' %}

{% block title %}Dashboard User{% endblock %}

{% block body %}

{% if app.user.club is not null %}

<header class="bg-gray-800 text-white p-4 shadow">
    <nav class="flex justify-between items-center">
        <div class="flex space-x-4">
            <a href="{{ path('app_club_showYourClub', {'clubId': app.user.club.id}) }}" 
               class="hover:text-yellow-400">Club</a>
            <a href="{{ path('app_team_index', {'clubId': app.user.club.id}) }}" 
               class="hover:text-yellow-400">Equipos</a>
            <a href="{{ path('app_game_index') }}" class="hover:text-yellow-400">Luchada</a>
            <a href="{{ path('app_score_index') }}" class="hover:text-yellow-400">Marcador</a>
        </div>
        <button class="bg-yellow-400 text-gray-800 px-4 py-2 rounded hover:bg-yellow-500" 
                onclick="window.location.href='{{ path('app_logout') }}'">
                Logout
        </button>
    </nav>
</header>

<main class="container mx-auto p-8">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Dashboard del Usuario</h1>

    <!-- Datos de Usuario -->
    <section class="bg-gray-100 p-6 rounded shadow mb-6">
        <h2 class="text-xl font-semibold text-gray-700 mb-4">Datos de Administrador del Club</h2>
        <p class="text-gray-600"><strong>Email:</strong> {{ app.user.email }}</p>
        <p class="text-gray-600"><strong>Nombre:</strong> {{ app.user.name }}</p>
        <p class="text-gray-600"><strong>Apellido:</strong> {{ app.user.surname }}</p>
        <p class="text-gray-600"><strong>ID Usuario:</strong> {{ app.user.id }}</p>
    </section>

    <!-- Datos del Club -->
    <section class="bg-gray-100 p-6 rounded shadow">
        <h2 class="text-xl font-semibold text-gray-700 mb-4">Datos del Club</h2>
        <p class="text-gray-600"><strong>ID Club:</strong> {{ app.user.club.id }}</p>
        <p class="text-gray-600"><strong>Nombre del Club:</strong> {{ app.user.club.name }}</p>
    </section>
</main>

{% else %}
<div class="container mx-auto p-8 text-center">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">El usuario no está asociado a ningún club</h2>
    <p class="text-gray-600 mb-6">Por favor, contacte con el administrador para resolver este problema.</p>
    <button class="bg-yellow-400 text-gray-800 px-4 py-2 rounded hover:bg-yellow-500" 
            onclick="window.location.href='{{ path('app_logout') }}'">Volver a la home</button>
</div>
{% endif %}

{% endblock %}
