{% extends 'base.html.twig' %}

{% block title %}Edit Game{% endblock %}

{% block body %}

<div class="bg-gray-800 text-white p-4 shadow relative">
    <h1 class="text-2xl font-bold text-center my-4 dark:text-white">Editar Luchada</h1>
    <a href="{{ path('app_game_index') }}" 
       class="absolute top-6 right-4 bg-blue-500 text-white hover:bg-blue-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-700 dark:hover:bg-blue-800 dark:focus:ring-blue-900">
       Volver a la lista
    </a>
</div>
<div class="flex justify-center items-center min-h-screen bg-gray-100 dark:bg-gray-900">
    <div class="my-6 w-1/3">
        <div class="bg-white rounded-lg shadow-md p-6 dark:bg-gray-800 dark:border-gray-700">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Actualizar Luchada</h2>

            <div class="text-sm font-medium text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-600">
                {{ include('game/_form.html.twig', {'button_label': 'Update'}) }}
            </div>
            
            <div class="mt-4">
                {{ include('game/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>

{% endblock %}
