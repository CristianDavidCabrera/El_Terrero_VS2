
{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="bg-gray-50 dark:bg-gray-900">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
        <div class="w-1/3 bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-lg xl:p-0 dark:bg-gray-800 dark:border-gray-700">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                    Create your account
                </h1>

                {{ form_start(registrationForm, { attr: { class: 'space-y-4 md:space-y-6' } }) }}
                    <div>
                        <label for="registrationForm_name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Name</label>
                        {{ form_widget(registrationForm.name, { 
                            attr: { 
                                class: 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' 
                            } 
                        }) }}
                    </div>

                    <div>
                        <label for="registrationForm_surname" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Surname</label>
                        {{ form_widget(registrationForm.surname, { 
                            attr: { 
                                class: 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' 
                            } 
                        }) }}
                    </div>

                    <div>
                        <label for="registrationForm_email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>
                        {{ form_widget(registrationForm.email, { 
                            attr: { 
                                class: 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' 
                            } 
                        }) }}
                    </div>

                    <div>
                        <label for="registrationForm_plainPassword" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
                        {{ form_widget(registrationForm.plainPassword, { 
                            attr: { 
                                class: 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' 
                            } 
                        }) }}
                    </div>

                    <div>
                        {{ form_widget(registrationForm.agreeTerms, { 
                            attr: { 
                                class: 'rounded border-gray-300 text-primary-600 focus:ring-primary-600 dark:border-gray-600 dark:focus:ring-blue-500' 
                            } 
                        }) }}
                        <label for="registrationForm_agreeTerms" class="ml-2 text-sm font-medium text-gray-900 dark:text-white">I agree to the terms and conditions</label>
                    </div>

                    <button type="submit" class="w-full bg-yellow-400 text-gray-800 hover:bg-yellow-500 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                        Register
                    </button>
                {{ form_end(registrationForm) }}

                <div class="text-sm font-light text-white dark:text-gray-400">
                    Already have an account? 
                    <a href="{{ path('app_login') }}" class="font-medium text-primary-600 hover:underline dark:text-primary-500">Sign in</a>
                </div>

                <div class="mt-4">
                    <button onclick="window.location.href='{{ path('home') }}'" class="w-full text-gray-800 bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-700 dark:hover:bg-gray-600 dark:focus:ring-gray-800">
                        Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
