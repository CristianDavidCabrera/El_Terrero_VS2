{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <div class="inset-0 bg-cover bg-center bg-no-repeat h-[700px]" 
         style="background-image: url('{{ asset('images/static/dibujo.png') }}');">
  
        <header class="bg-gray-800 bg-opacity-70 backdrop-blur-md text-white p-4 sticky top-0 z-50 shadow-lg">

            <nav class="flex justify-between items-center">
                <div>
                    <a href="#leyendas" class="text-white hover:text-yellow-400 mx-2">Leyendas</a>
                    <a href="#promesas" class="text-white hover:text-yellow-400 mx-2">Promesas</a>
                    {# <a href="#equipos" class="text-white hover:text-yellow-400 mx-2">Equipos</a> #}
                    <a href="#marcador" class="text-white hover:text-yellow-400 mx-2">Marcador</a>
                    <a href="#calendario" class="text-white hover:text-yellow-400 mx-2">Calendario</a>
                    <a href="#clasificacion" class="text-white hover:text-yellow-400 mx-2">Clasificación</a>
                </div>
                <button class="bg-yellow-400 text-gray-800 px-4 py-2 rounded hover:bg-yellow-500" onclick="window.location.href='{{ path('app_login') }}'">Login</button>
            </nav>
        </header>

        <section class="bg-gray-100 bg-opacity-70  py-16">
            <div class="container mx-auto text-center">
                <h2 class="text-9xl font-bold mb-4">El Terrero</h2>
                <p class=" text-4xl text-gray-700 mb-2">Sigue a tu equipo. Resultados de las luchadas al minuto.</p>
            </div>
        </section>  
    </div>  

    <main class="mt-8 z-50">
        <section id="marcador" class="py-8">
            <div class="container mx-auto">
                <h2 class="text-2xl font-bold text-center mb-6">Marcadores</h2>
                {% for game in games %}
                <div class="bg-gray-100 p-4 mb-4 rounded shadow">
                    <p class="text-center text-gray-600 mb-4">{{ game.matchDay | date("d/m/Y g:i A") }}</p>
                    <div class="flex justify-center space-x-4">
                        {% for score in game.scores %}
                            {% if score.isLocal == true %}
                            <div class="flex items-center bg-white p-4 shadow rounded border">
                                <h5 class="text-lg font-semibold text-gray-800 mr-4">{{  score.team.name  }}</h5>
                                <h5 class="ml-auto text-lg font-bold">{{  score.points  }}</h5>
                            </div>
                            {% else %}
                            <div class="flex items-center bg-white p-4 shadow rounded border">
                                <h5 class="ml-auto text-lg font-bold mr-4"> {{  score.points  }}</h5>
                                <h5 class="text-lg font-semibold text-gray-800"> {{  score.team.name  }}</h5>
                            </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
                {% endfor %}     
            </div>
        </section>
    </main>
  
    <footer class="bg-white shadow dark:bg-gray-800 bg-opacity-70 backdrop-blur-md text-white p-4 flex justify-center space-x-4">
        <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
            <div class="container mx-auto text-center">
                <h2 class="text-2xl font-bold mb-4">Nuestros Patrocinadores</h2>
                <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
                <div class="grid grid-cols-2 sm:grid-cols-4 lg:grid-cols-4 gap-4">
                    <img src="/images/static/Flag_of_Fuerteventura.svg" alt="Patrocinador 1" class="h-16 mx-auto">
                    <img src="/images/static/Flag_of_Gran_Canaria.svg" alt="Patrocinador 2" class="h-16 mx-auto">
                    <img src="/images/static/Flag_of_Lanzarote.svg" alt="Patrocinador 3" class="h-16 mx-auto">
                   {#  <img src="/images/static/Escudo_de_Canarias.svg" alt="Patrocinador 4" class="h-16 mx-auto"> #}
                    <img src="/images/static/Flag_of_Tenerife.svg.png" alt="Patrocinador 5" class="h-16 mx-auto">
                    <img src="/images/static/Flag_of_La_Palma_with_CoA.svg.png" alt="Patrocinador 6" class="h-16 mx-auto">
                    <img src="/images/static/Flag_of_La_Gomera.svg" alt="Patrocinador 1" class="h-16 mx-auto">
                    <img src="/images/static/Flag_of_El_Hierro_with_CoA.svg.png" alt="Patrocinador 2" class="h-16 mx-auto">
               {#      <img src="sponsor9.png" alt="Patrocinador 3" class="h-16 mx-auto">
                    <img src="sponsor10.png" alt="Patrocinador 4" class="h-16 mx-auto">
                    <img src="sponsor11.png" alt="Patrocinador 5" class="h-16 mx-auto">
                    <img src="sponsor12.png" alt="Patrocinador 6" class="h-16 mx-auto"> #}
                </div>
            </div>
        <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
            <div class="sm:flex sm:items-center sm:justify-between">
                <a href="#" class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse">
                    <img src="/images/static/Escudo_de_Canarias.svg" class="h-8" alt="Gobierno de Canarias Logo" />
                    <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Gobierno de Canarias</span>
                </a>
                <ul class="flex flex-wrap items-center mb-6 text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400">
                    <li>
                        <a href="#leyendas" class="hover:underline me-4 md:me-6 text-white hover:text-yellow-400">Leyendas</a>
                    </li>
                    <li>
                        <a href="#marcador" class="hover:underline me-4 md:me-6 text-white hover:text-yellow-400">Marcador</a>
                    </li>
                    <li>
                        <a href="#equipos" class="hover:underline me-4 md:me-6 text-white hover:text-yellow-400">Equipos</a>
                    </li>
                </ul>
            </div>
            <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
            <span class="block text-sm text-gray-500 sm:text-center dark:text-gray-400">© 2023 <a href="https://flowbite.com/" class="hover:underline">Reboot Academy Student™</a>. All Rights Reserved.</span>
        </div>
    </footer>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/reloadHome.js') }}"></script>
    <script src="{{ asset('js/scrollHome.js') }}"></script>
{% endblock %} 
