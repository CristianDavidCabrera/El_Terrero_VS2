{% extends 'base.html.twig' %}

{% block title %}Dashboard User{% endblock %}

{% block body %}
{% block header%}
<header class="bg-gray-800 text-white p-4 shadow">
    <nav class="flex justify-between items-center">
        <div class="flex space-x-4">
            <a href="{{ path('app_club_index') }}" class="hover:text-yellow-400">Clubes</a>
            <a href="{{ path('app_team_index') }}" class="hover:text-yellow-400">Equipos</a>
            <a href="{{ path('app_game_index') }}" class="hover:text-yellow-400">Luchadas</a>
            <a href="{{ path('app_score_index') }}" class="hover:text-yellow-400">Marcadores</a>
        </div>
        <button class="bg-yellow-400 text-gray-800 px-4 py-2 rounded hover:bg-yellow-500"
                onclick="window.location.href='{{ path('app_logout') }}'">Logout</button>
    </nav>
</header>
{% endblock %}

 
<main class="container mx-auto p-8" >
  
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Dashboard del Administrador</h1>

    <section class="bg-gray-100 p-6 rounded shadow mb-6">
        <h2 class="text-xl font-semibold text-gray-700 mb-4">Datos de Administrador de la web</h2>
        <p class="text-gray-600"><strong>Email:</strong> {{ app.user.email }}</p>
        <p class="text-gray-600"><strong>Nombre:</strong> {{ app.user.name }}</p>
        <p class="text-gray-600"><strong>Apellido:</strong> {{ app.user.surname }}</p>
        <p class="text-gray-600"><strong>ID Usuario:</strong> {{ app.user.id }}</p>
    </section>
{#  <div class="inset-0 bg-size bg-center bg-no-repeat h-[700px]" 
         style="background-image: url('{{ asset('images/static/traspie.jpg') }}');">
    <div/>   #}

</main>


{% endblock %}
